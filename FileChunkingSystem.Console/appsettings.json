{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "MetadataConnection": "Host=localhost;Database=filechunking;Username=postgres;Password=1",
    "PostgreSQL": "Host=localhost;Database=filechunking_storage;Username=postgres;Password=1",
    "MongoDB": "mongodb://localhost:27017"
  },
  "Storage": {
    "FileSystem": {
      "BasePath": "chunks"
    },
    "MongoDB": {
      "DatabaseName": "filechunking_storage",
      "CollectionName": "chunks"
    }
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/app-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
